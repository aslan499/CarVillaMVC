@using CarVilla.DAL.Models
@model List<ProductModel>
<div class="card-body">
    <h4 class="card-title">Inverse table</h4>
    <p class="card-description">
        Add class <code>.table-dark</code>
    </p>
    <div class="table-responsive">
        <table class="table table-dark">
            <thead>
                <a asp-controller="Service" asp-action="Create">Yeni Maşın əlavə et </a>
                <tr>
                    <th> # </th>
                    <th> Name </th>
                    <th> Price </th>
                    <th> Model </th>
                    <th> Image </th>
                </tr>
            </thead>
            <tbody>
                @foreach (ProductModel item in Model)
                {
                    <tr>
                        <td> @item.Id </td>
                        <td> @item.Name </td>
                        <td> @item.Price </td>
                        <td> @item.Model </td>
                        <td> @item.ImgUrl </td>
                        <td><a asp-controller="Service" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                        <td><a asp-controller="Service" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    </tr>
                }
               
                
            </tbody>
        </table>
    </div>
</div>